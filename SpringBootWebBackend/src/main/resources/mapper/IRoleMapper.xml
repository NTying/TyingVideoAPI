<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.tying.mapper.IRoleMapper">
    <select id="findAllRoles" resultType="com.tying.domain.Role">
        select
            r.*
        from
            sys_role r, sys_role_menu rm
        where
            rm.`menu_id` = 1
            and r.`id` = rm.`role_id`
    </select>
    <select id="findRolesByPage" resultType="com.tying.domain.Role">
        select
            r.*
        from
            sys_role r, sys_role_menu rm
        where
            rm.`menu_id` = 1
          and r.`id` = rm.`role_id`
    </select>
</mapper>